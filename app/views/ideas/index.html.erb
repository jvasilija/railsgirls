<h1 class="ideas-heading">Moi Idei</h1>

<% @ideas.in_groups_of(3) do |group| %>
  <div class="row">
    <% group.compact.each do |idea| %>
      <div class="span4">
       <div class="imageborder sizeimage"> 
        <%= image_tag idea.picture_url, :width => '100%' if idea.picture.present?%> 
       </div> 
        <h4><%= link_to idea.name, idea %></h4>
       <div class="descriptionstyle"><%= idea.description %>
       </div>
      </div>
    <% end %>
  </div>
<% end %>
